<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backrepeat"
    android:gravity="center"
    android:orientation="vertical" >
    
    <TextView android:layout_height="0dp" 
         android:id="@+id/fonteFertigo"
         android:layout_weight="1"
         android:layout_marginTop="-5dp"
         android:gravity="center" 
         android:layout_width="match_parent"
         android:textSize="60sp"
         android:textColor="#FFFFFF"
         android:text="Leva eu!" />

    <Button
        android:id="@+id/darCarona"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/mybutton"
        android:onClick="darCarona"
        android:text="@string/dar_carona"
        android:textSize="18sp" 
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/pegarCarona"
        android:visibility="invisible"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/mybutton"
        android:onClick="pegarCarona"
        android:text="@string/pegar_carona"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>
    
        <com.facebook.widget.LoginButton
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/authButton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp" />

</LinearLayout>